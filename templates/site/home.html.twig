{% extends 'base.html.twig' %}

{% block title %}Hello SiteController!{% endblock %}
{% block body %}
    <section>
        <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://www.geekjunior.fr/wp-content/uploads/2018/02/dagoma-imprimantes-3d.jpg" width="auto" height="350" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.presse-citron.net/wordpress_prod/wp-content/uploads/2016/12/dagoma.jpg" width="auto" height="350" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.mrhightech.fr/wp-content/uploads/2018/01/MHT_DAGOMA_NEVA_01-990x557.jpg" width="auto" height="350" class="d-block w-100" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>  
    {% if article is defined %}
    <article>
        <div class="jumbotron">
            <h2 class="display-5">Les dernières nouvelles</h2>
            <h3 class="display-6">{{article.Titre}}</h3>
            <p class="lead">Ecrit le {{ article.createdAt | date('d/m/Y')}} à {{article.createdAt | date('H:i')}}</p>
            <hr class="my-4">
            <p>{{article.Contenu | raw}}</p>
            <div class="content">
                {% if images is not empty %}
                    <img alt="Embedded Image" src="data:image/jpg;base64,{{ images[0] }}" height="150" width="300" />
                {% endif %}
                <hr>
            </div>
            <div class="read-more-date">
                <a href="{{ path('article_blog', {'id': article.id}) }}" class="btn btn-primary">Lire plus...</a>
            </div>
        </div>
    </article> 
    {% endif %}
{% endblock %}
