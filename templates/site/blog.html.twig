{% extends 'base.html.twig' %}

{% block title %}Hello SiteController!{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="/css/styleListe.css">{% endblock %}
{% block body %}
<section>
    <div class="container">
        <div class="row">
            <div class="col col-xs-12">
                <div class="blog-grids">
                    {% for article in articles %}
                    <div class="grid">
                        <div class="entry-media">
                            <img src="http://placehold.it/350x150" alt="">
                        </div>
                        <div class="entry-body">
                            <span class="cat"></span>
                            <h3><a href="{{ path('article_blog', {'id': article.id}) }}">{{article.Titre}}</a></h3>
                            {{article.Contenu | raw}}
                            <div class="read-more-date">
                                <a href="{{ path('article_blog', {'id': article.id}) }}" class="btn btn-primary">Lire plus...</a>
                            </div>
                            <span class="date">Ecrit le {{ article.createdAt | date('d/m/Y')}} Ã  {{article.createdAt | date('H:i')}}</span>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>  
    </div>
</section>
{% endblock %}
