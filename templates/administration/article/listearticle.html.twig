{% extends 'base.html.twig' %}

{% block title %}HomeCraft : Panneau administration liste des articles{% endblock %}


{% block body %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Administration</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor03">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/administration/clients">Liste des clients</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/administration/listecommande">Liste des commandes</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/administration/articles">Liste des articles <span class="sr-only">(current)</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/administration/blogs">Liste des articles du blog</a>
      </li>
    </ul>
  </div>
</nav>

<section>
    <h2 class="display-5" style="padding: 30px">Liste des articles</h2>
    {% if articles|length > 0 %}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id article</th>
                    <th scope="col">Nom article</th>
                    <th scope="col">Prix vente article</th>
                    <th scope="col">Prix de production</th>
                    <th scope="col">Categorie</th>
                    <th scope="col">Disponible</th>
                    <th scope="col">Date création</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td><a href="/administration/article/{{article.id}}">{{article.id}}</a></td>
                        <td>{{article.NomArticle | raw}}</td>
                        <td>{{article.PrixUnitaireTTC | raw}}€</td>
                        <td>{{article.PrixProduction | raw}}€</td>
                        <td>{% for categorieArticle in article.CategorieArticle %}
                        {{categorieArticle.Nom}} 
                        {% endfor %}</a></td>
                        <td>{{article.EnVente}}</td>
                        <td>{{article.createdAt|date("d/m/Y")}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table> 
    {% endif %}
</section>

{% endblock %}
