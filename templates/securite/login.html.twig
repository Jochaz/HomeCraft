{% extends 'base.html.twig' %}


{% block body %}
    <div class="jumbotron">
            <h1 class="display-5">Connexion</h1>
            <hr class="my-4">
            <h4 class="display-5">Veuillez vous connecter afin de pouvoir accéder à votre compte client</h4>
            <hr class="my-4">
                <form action="{{ path('security_login')}}" method="post">
                    <div class="modal-content">
                        <div class="modal-header text-center">
                            <h4 class="modal-title w-100 font-weight-bold">Se connecter</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body mx-3">
                            <div class="md-form mb-5">         
                                <label data-error="wrong" data-success="right" for="defaultForm-email"><i class="fas fa-envelope prefix grey-text"></i> Adresse email</label>
                                <input type="email" id="defaultForm-email" class="form-control validate" required name="_username">
                                <label data-error="wrong" data-success="right" for="defaultForm-pass"><i class="fas fa-lock prefix grey-text"></i> Mot de passe</label>
                                <input type="password" id="defaultForm-pass" class="form-control validate" required name="_password">
                            </div>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary">Se connecter</button>
                            <button type="button" class="btn btn-secondary">Mot de passe oublié ?</button>
                        </div>
                    </div>
                </form>
    </div>    
{% endblock %}