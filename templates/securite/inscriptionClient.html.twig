{% extends 'base.html.twig' %}


{% block body %}
    <div class="jumbotron">
            <h1 class="display-5">Inscription</h1>
            <hr class="my-4">
            {{form_start(form)}}
            <legend>Informations générales</legend>
            {{form_row(form.Civilite)}}
            {{form_row(form.NomClient, {'label': 'Votre nom', 'attr' : {'placeholder': 'Nom'}})}}
            {{form_row(form.PrenomClient, {'label': 'Votre prénom','attr' : {
                                                  'placeholder': 'Prénom'}})}}
            {{form_row(form.DateNaissance)}} 
            {{form_row(form.EmailClient, {'label': 'Adresse email','attr' : {
                                                  'placeholder': 'Adresse email'}})}}           
            {{form_row(form.PasswordClient, {'label': 'Mot de passe','attr' : {
                                                  'placeholder': 'Mot de passe'}})}}
            {{form_row(form.PasswordConfirmClient, {'label': 'Repéter votre mot de passe','attr' : {
                                                  'placeholder': 'Repéter votre mot de passe'}})}}
                                                 

            <hr class="my-4">      
            {{form_start(formAdresseLivraison)}}
            <legend>Votre adresse de livraison</legend>
            {{form_row(formAdresseLivraison.NomAdresse, {'label': 'Nom de votre adresse (ex : maison, travail)', 'attr' : {'placeholder': 'Nom'}})}}
            {{form_row(formAdresseLivraison.Rue1Adresse, {'label': 'Ligne d\'adresse n°1', 'attr' : {'placeholder': 'Ligne d\'adresse n°1'}})}}
            {{form_row(formAdresseLivraison.Rue2Adresse, {'label': 'Ligne d\'adresse n°2', 'attr' : {'placeholder': 'Ligne d\'adresse n°2'}})}}
            {{form_row(formAdresseLivraison.Rue3Adresse, {'label': 'Ligne d\'adresse n°3', 'attr' : {'placeholder': 'Ligne d\'adresse n°3'}})}}
            {{form_row(formAdresseLivraison.CodePostalAdresse, {'label': 'Code postal', 'attr' : {'placeholder': 'Code postal'}})}}
            {{form_row(formAdresseLivraison.VilleAdresse, {'label': 'Ville', 'attr' : {'placeholder': 'Ville'}})}}
            {{form_row(formAdresseLivraison.PaysAdresse, {'label': 'Pays', 'attr' : {'placeholder': 'Pays'}})}}
            {{ form_row(form._token) }}
            {{ form_row(formAdresseLivraison._token) }}
            <button type="submit" class="btn btn-primary">S'inscrire</button>
            {{form_end(form)}}    
            {{form_end(formAdresseLivraison)}}
    </div>    
{% endblock %}
